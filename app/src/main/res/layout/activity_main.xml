<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" />
    <LinearLayout
        android:background="#4D000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:text="X: 300.50"
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:id="@+id/tvXCoordinate"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="0.33"
                android:text="Y: 300.50"
                android:layout_width="0dp"
                android:id="@+id/tvYCoordinate"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:text="Floor: 1st"
                android:layout_weight="0.33"
                android:layout_width="0dp"
                android:id="@+id/tvFloor"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/btnRead"
            android:text="Get Location from Lifi"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="#3652EC"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:id="@+id/tvSerialData"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>


</FrameLayout>